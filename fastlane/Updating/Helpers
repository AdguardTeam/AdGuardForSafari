# frozen_string_literal: true

module DefaultUpdateConstants
  # Available packages
  NPM_PACKAGES = %w[assistant safari-extension].freeze
  SPM_PACKAGES = %w[safariconverterlib].freeze

  # All available packages for validation and help messages
  ALL_PACKAGES = (NPM_PACKAGES + SPM_PACKAGES).freeze
  class << self
    attr_accessor :root_path, :project_path
  end

  def self.default_meta_plist
    "#{root_path}/AdguardMini/AdguardMini/Resources/ThirdPartyDependencies.plist"
  end

  def self.content_script_path
    "#{root_path}/AdguardMini/PopupExtension/ContentScript"
  end

end


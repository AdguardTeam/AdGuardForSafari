.AddCustomFilterModal {
    &_desc {
        margin: var(--m-xxs) auto var(--m-s);
        text-align: center;
    }

    &_container {
        padding: 0 var(--m-s);
    }

    &_checkbox {
        text-align: left;
        padding-top: var(--m-xxs);
        padding-bottom: var(--m-m);
        width: 328px;

        &_desk {
            color: var(--text-main-text-main-default);
            display: inline;
            width: 328px;
            text-wrap: wrap;
        }
    }

    &_input {
        text-align: left;
        margin: var(--m-s) 0;
        width: 328px;
    }


    &_button {
        margin-bottom: var(--m-s);
        width: 328px;

        &:last-of-type {
            margin: 0;
        }
    }

    &_filterDesc {
        text-align: left;
        margin-bottom: var(--m-s);
    }

    &_buttonContent {
        flow: horizontal;
        position: relative;

        &_text {
            margin: 0 *;
        }

        &_loader {
            color: var(--text-buttons-primary-default);
            position: absolute;
            right: 0px;
            top: -6px;
        }
    }
}

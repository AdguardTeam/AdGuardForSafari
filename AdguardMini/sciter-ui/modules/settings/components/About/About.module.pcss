.About {
    &_textSpace {
        margin-bottom: var(--m-xxxs);
    }

    &_dependencies {
        flow: horizontal;
        cursor: pointer;
        margin-top: var(--m-l);

        &_arrow {
            margin-left: *;
            transform: rotate(-90deg);

            &__active {
                margin-left: *;
                transform: rotate(90deg);
            }
        }

        &_item {
            color: var(--text-description-description-default);
        }
    }

    &_description {
        margin-top: var(--m-s);
        margin-bottom: var(--m-m);
    }

    &_updateSection {
        margin-top: var(--m-xs);
    }

    &_update {
        margin-bottom: var(--m-l);
        margin-top: -16px;
        &_requestUpdate {
            display: inline;
            color: var(--fills-buttons-main-button-default);
            cursor: pointer;
            text-decoration: underline;

            &:hover {
                text-decoration: none;
            }
        }
    }

    &_rights {
        color: var(--text-placeholder-placeholder-default);
    }

    &_link {
        display: block;
        text-decoration: none;
        width: min-content;
        white-space: nowrap;
        padding: var(--m-xxs) 0;

        &:hover {
            color: var(--fills-buttons-main-button-default);
        }
    }
}
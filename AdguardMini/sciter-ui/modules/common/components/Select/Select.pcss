.select_wrapper {
    width: *;
    border-radius: 8px;
    flow: horizontal;
    cursor: pointer;
    border: 1px solid var(--stroke-inputs-inactive-input-stroke-default);
    background-color: var(--fills-inputs-input-background-default);
    box-sizing: content-box;
    padding: 12px var(--m-s);
    height: 30px;
}

.select_check {
    display: block;
    margin-left: * !important;
    color: var(--text-user-rules-green-default) !important;
}

.select_select {
    width: *;
    font-family: inherit;
    transition: border-color linear .1s;
    box-sizing: content-box;
    background: transparent;
    border: 0;
    font-size: 16px;

    > button {
        foreground-image: url('chevron-down.svg') !important;
        foreground-size: 24px !important;
        background: none !important;
        cursor: pointer !important;
        margin-right: 0 !important;
        width: 24px !important;
        height: 24px !important;
    }

    > .list {
        border: 0 !important;
        cursor: pointer !important;
        border-color: var(--fills-menus-dropdown-menu-background-default) !important;
        outline: none !important;
        border-radius: 8px !important;
        margin-top: 16px !important;
        margin-left: -16px !important;
        margin-right: -16px !important;
        border-radius: 8px;
        box-shadow: 8px 8px 24px 0px rgba(0, 0, 0, 0.10) !important;
        
        > option {
            padding: 16px 16px 8px !important;
            flow: horizontal !important;
            vertical-align: middle !important;
            font-size: 16px !important;
            line-height: 24px !important;
            box-sizing: content-box !important;
            color: var(--text-main-text-main-default);
            border-top: 1px solid var(--stroke-dividers-item-divider-default) !important;

            &:first-of-type {
                border-top: 0 !important;
            }

            &:hover {
                background-color: var(--fills-backgrounds-page-background-additional-default) !important;
            }

            &:current {
                background-color: transparent !important;
                fill: inherit !important;
                color: inherit !important;

                &:hover {
                    background-color: var(--fills-backgrounds-page-background-additional-default) !important;
                }
            }
        }
    }
    > caption {
        outline: 0;
        flow: horizontal !important;
        margin-left: -8px !important;
        > span {
            padding-top: 4px !important;
        }
        & .select_check {
            display: none !important;
        }
    }
}


.select_label {
    display: block;
    color: var(--text-main-text-main-default);
    margin-bottom: var(--m-xxs);
}
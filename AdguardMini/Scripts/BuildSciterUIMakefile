OUTPUT_FILE_NAME := resources.bin
OUTPUT_DIR := ${SRCROOT}/SciterResources
OUTPUT_FILE := ${OUTPUT_DIR}/${OUTPUT_FILE_NAME}

.PHONY: all install build clean
all: build
install: build

build: $(OUTPUT_FILE)

DEPS := $(shell find sciter-ui)

$(OUTPUT_FILE): $(DEPS)
	${SRCROOT}/Scripts/buildSciterUIPhase.sh "$(CONFIGURATION)"

clean:
	rm ${OUTPUT_FILE}

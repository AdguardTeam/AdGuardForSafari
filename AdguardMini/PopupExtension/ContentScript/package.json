{
  "name": "contentscript",
  "version": "1.0.0",
  "description": "Content script for advanced blocking",
  "scripts": {
    "build": "yarn clean && yarn build:rollup && yarn build:publish",
    "build:rollup": "yarn rollup --config rollup.config.ts  --configPlugin @rollup/plugin-json --configPlugin @rollup/plugin-typescript",
    "build:publish": "publish(){ cp -r dist/advanced-script.js ${1-../Resources/advanced-script.js}; }; publish",
    "clean": "rimraf dist",
    "lint": "eslint . --cache --ext .ts"
  },
